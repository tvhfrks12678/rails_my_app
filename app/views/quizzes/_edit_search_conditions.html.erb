<div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<%= form_with(model: @quiz_posts_search_form, url: edit_index_search_quizzes_path, method: :get, local: true, class: 'search_conditions_field') do |f| %>
			
			<div class="form-group row search_conditions_field_item">
				<label class='col-md-3 col-form-label search_conditions_field_input_lbl'>検索ワード:</label>
				<div class='col-md-9'>        
					<%= f.text_field :search_word, class: 'form-control' %>
				</div>
			</div>

			<div class="form-group row search_conditions_field_item">
				<label class='col-md-3 col-form-label search_conditions_field_input_lbl'>期間:</label>
				<div class='col-md-4'>        
					<%= f.date_field :from_date, class: 'form-control', value: f.object.from_date %>
				</div>
				<label class='col-md-1 col-form-label search_conditions_field_item_from_to_symbol'>〜</label>
				<div class='col-md-4'>
					<%= f.date_field :to_date, class: 'form-control', value: f.object.to_date %>
				</div>
			</div>

			<div class="form-group row search_conditions_field_item">
				<label class='col-md-3 col-form-label search_conditions_field_input_lbl'>母音の文字数:</label>
				<div class='col-md-4'>        
					<%= f.select(:from_rhyme_characters, f.object.rhyme_select_box_choices, { include_blank: f.object.select_box_init_msg }, class: 'form-control') %>
				</div>
				<label class='col-md-1 col-form-label search_conditions_field_item_from_to_symbol'>〜</label>
				<div class='col-md-4'>
					<%= f.select(:to_rhyme_characters, f.object.rhyme_select_box_choices, { include_blank: f.object.select_box_init_msg }, class: 'form-control') %>
				</div>
			</div>

			<div class="form-group row search_conditions_field_item">
				<label class='col-md-3 col-form-label search_conditions_field_input_lbl'>YouTube:</label>
				<div class='col-md-4'>
					<%= f.check_box :existing_youtube, {checked: f.object.existing_youtube == "true"}, true, false %>
					<label>有り</label>
					<%= f.check_box :no_youtube, {checked: f.object.no_youtube == "true"}, true, false %>
					<label>無し</label>
				</div>
				<div class='col-md-5'></div>
			</div>

			<div class="form-group row search_conditions_field_item">
				<label class='col-md-3 col-form-label search_conditions_field_input_lbl'>並び順:</label>
				<div class='col-md-5'>
					<%= f.select(:sort_order, f.object.sort_order_select_box_choices, { include_blank: f.object.select_box_init_msg }, class: 'form-control') %>
				</div>
				<div class='col-md-4'></div>
			</div>
			
			<div class='btn_search'>
				<%= f.submit "検索", class: 'btn btn-default' %>
			</div>
		<% end %>
	</div>
</div>